<% if @users.any? %>
  <div class="user_avatars">
    <% @users.each do |user| %>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <%= link_to gravatar_for(user) %>
        <%= user.name%>
        <div class="trapdoor">
          <div class="top door"></div>
          <div class="bottom door"></div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
