<p id="notice"><%= notice %></p>

<h1><%= t ".user" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
      <th><%= t ".pass" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= link_to t(".show"), user %></td>
        <td><%= link_to t(".edit"), edit_user_path(user) %></td>
        <td><%= link_to t(".destroy"), user, method: :delete, data: { confirm: t(".sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

