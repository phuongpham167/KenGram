<% if post_comment.id %>
  <div class="row">
    <div class="col-md-2">
      <%= link_to gravatar_for(post_comment.user), post_comment.user %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <span><%= link_to post_comment.user.name , post_comment.user %></span>
        <%= post_comment.content %></br>
        <p><%= time_ago_in_words(post_comment.created_at) %></p>
      </div>
      <% if current_user?(post_comment.user) %>
        <div class="row action">
          <div class="edit">
          <%= link_to t(".delete"), post_comment_path(post_comment), method: :delete, data: {confirm: t(".confirm")} if current_user == post_comment.user%>
            <a class="btn" data-toggle="modal" data-target = <%= "#modal-window-two-"+post_comment.id.to_s %> ><%= t ".edit" %></a>
            <div class="modal fade" id=<%= "modal-window-two-"+post_comment.id.to_s %> role="dialog">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= t ".edit" %></h4>
                  </div>
                  <div class="modal-body">
                    <%= form_for(post_comment, html: { multipart: true }) do |f| %>
                      <div class="field">
                        <%= f.label :content %><br>
                        <%= f.text_field :content, class: "form-control input-sm" %>
                      </div>
                      <div class="actions">
                         <%= f.submit t(".update"), class: "btn btn-primary" %>
                      </div>
                    <% end %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
<% end %>
